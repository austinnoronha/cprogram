#include<stdio.h>
/* Given by Mayank Pathak */
int main()
{
    int n,i,large=0,count=0;
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
    {
       scanf("%d",&a[i];
    }
    large=a[0];
    
    //finding the large elememt
    for(i=0;i<n;i++)
    {
    if(a[i]>large)
    {
      large=a[i];
     } 
    }
    
    //Counting the large element
    for(i=0;i<n;i++)
    {
      if(a[i]==large)
      {
         count++;
         }
     } 
   printf("%d",count);
   return 0;
   }
   
